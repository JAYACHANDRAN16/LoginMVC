@model Employee.Models.Emp_Inf

@{
    ViewBag.Title = "Signup";
}


<head>

    <link href="@Url.Content("~/CSS Style/Signup.CSS")" rel="stylesheet" type="text/css" />


</head>

<h2>Signup</h2>


<body>

    <center>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Fill this form to create your Account</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="name">
                @Html.LabelFor(model => model.Emp_name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Emp_name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Emp_name, "", new { @class = "text-danger" })
                </div>
            </div>
            <hr />
            <hr />
            <div class="password">
                @Html.LabelFor(model => model.Emp_password, htmlAttributes: new { @class = "control-label col-md-2" })

                <div class="colour">
                    @Html.EditorFor(model => model.Emp_password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Emp_password, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="repassword">
                @Html.LabelFor(model => model.Emp_Repassword, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Emp_Repassword, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Emp_Repassword, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" id="create" />
                </div>
            </div>

            <div class="form-grp">
                <div class="col-md-offset-2 col-md-10">
                    <label>@ViewBag.Notification</label>
                </div>
            </div>



            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
        }
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }

    </center>
</body>